upstream web {
{{range getvs "/services/web/*"}}
  server {{.}};
{{end}}
}

server {
  listen 80;
  server_name webapp.example.com;

  access_log /dev/stdout;
  error_log /dev/stdout;
  
  location = /health {
    return 200;
  }

  location /status {
    stub_status on;
  }

  location / {
    proxy_pass http://web;
  }
}
